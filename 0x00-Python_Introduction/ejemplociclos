#Ejemplo
funci=int(input("Ingrese valor:"))
for numero in range(funci):
    if numero %3 ==0:
        if numero %5 ==0:
            print("Flip Flop")
        else:
            print("Flip")
    else:
        if numero %5 ==0:
            print("Flop")
        else:
            print(numero)

#ejemplo while
def relojhoras(dias):
    horas=0
    dia_actual=1
    while dia_actual<=dias:
        print(horas, "Horas del día", dia_actual)
        horas+=1
        if horas==25:
            dia_actual+=1 #dia_actual=dia_actual+1
            horas=0
relojhoras(2)

#mismo ejemplo for

def relojhoras(dias):
    horas=0
    for dia_actual in range(1,dias+1):
        print(horas,"horas del día",dia_actual)
        horas+=1
        if horas==25:
            horas=0
relojhoras(4)

#En el for no funciona bien el ciclo
